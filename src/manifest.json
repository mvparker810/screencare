{
  "manifest_version": 3,
  "name": "Screen Care",
  "version": "1.0",
  "description": "Helps you maintain healthy screen habits with gentle reminders.",
  "icons": {
        "16": "media/icon.png",
        "32": "media/icon.png",
        "48": "media/icon.png",
        "128": "media/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScreenCare"
  },
  "permissions": ["notifications", "tabs", "offscreen"],
  "host_permissions": [
    "http://localhost/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["notification-injector.js"],
      "run_at": "document_start"
    }
  ]
}


